<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="-21dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Login"
            android:layout_width="114dp"
            android:layout_height="45dp"
            android:id="@+id/txtMerkSubTitle"
            android:textSize="32sp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            android:textColor="#1b1b1b"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="178dp" />

    <TextView
            android:text="Log alstublieft in om verder te gaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtModelSubTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            app:layout_constraintTop_toBottomOf="@+id/txtMerkSubTitle" />

    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:text="E-mail"
            android:ems="10"
            android:id="@+id/editTextEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/txtModelSubTitle" />

    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Wachtwoord"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

    <Button
            android:text="Login"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/loginBtn"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#4d66e5"
            android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

    <TextView
            android:text="Meld u hier aan."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCreateAccount"
            android:layout_marginEnd="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#4d66e5"
            android:layout_marginTop="165dp"
            app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

    <TextView
            android:text="Heeft u nog geen account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBrandstofSubTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            android:layout_marginTop="230dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>