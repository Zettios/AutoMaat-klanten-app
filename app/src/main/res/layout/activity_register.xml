<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:layout_editor_absoluteY="-21dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:text="Registreren"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/textView"
            android:textSize="32sp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            android:textColor="#4d66e5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextUserName"
            android:drawableStart="@drawable/user_regular_grey"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextFirstName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/editTextLastName"
            android:layout_marginEnd="5dp" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextLastName"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/editTextFirstName" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
            android:drawableStart="@drawable/unlock_keyhole_solid" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextRepeatPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
            android:layout_marginTop="90dp"
            android:drawableStart="@drawable/unlock_keyhole_solid" />

    <androidx.appcompat.widget.AppCompatButton
            android:text="REGISTREER  âžœ"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:id="@+id/registerBtn"
            android:textColor="#ffffff"
            android:background="@drawable/gradient"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="150dp" />

    <TextView
            android:text="Heeft u al een account? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            app:layout_constraintEnd_toStartOf="@+id/loginBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="69dp"
            android:textColor="#9e9e9e" />

    <TextView
            android:text="Inloggen."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginBtn"
            android:textColor="#4d66e5"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="69dp" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableStart="@drawable/envelope_regular"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/editTextFirstName"
            android:layout_marginTop="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Gebruikersnaam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="#898989"
            app:layout_constraintStart_toStartOf="@+id/editTextUserName"
            app:layout_constraintBottom_toTopOf="@+id/editTextUserName"
            android:layout_marginBottom="-10dp"
            android:layout_marginStart="2dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Voornaam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="#898989"
            app:layout_constraintStart_toStartOf="@+id/editTextFirstName"
            app:layout_constraintBottom_toTopOf="@+id/editTextFirstName"
            android:layout_marginBottom="-10dp"
            android:layout_marginStart="2dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Achternaam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="#898989"
            app:layout_constraintStart_toStartOf="@+id/editTextLastName"
            app:layout_constraintBottom_toTopOf="@+id/editTextLastName"
            android:layout_marginBottom="-10dp"
            android:layout_marginStart="2dp" />

    <TextView
            android:text="E-mailadres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="#898989"
            app:layout_constraintBottom_toTopOf="@+id/editTextEmail"
            android:layout_marginBottom="-10dp"
            app:layout_constraintStart_toStartOf="@+id/editTextEmail"
            android:layout_marginStart="2dp" />

    <TextView
            android:text="Wachtwoord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="#898989"
            app:layout_constraintBottom_toTopOf="@+id/editTextPassword"
            android:layout_marginBottom="-10dp"
            app:layout_constraintStart_toStartOf="@+id/editTextPassword"
            android:layout_marginStart="2dp" />

    <TextView
            android:text="Bevestig wachtwoord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textColor="#898989"
            app:layout_constraintBottom_toTopOf="@+id/editTextRepeatPassword"
            android:layout_marginBottom="-10dp"
            app:layout_constraintStart_toStartOf="@+id/editTextRepeatPassword"
            android:layout_marginStart="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>