<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/white">

    <TextView
            android:text="Car name + model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetailCarNameModel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="20sp" />

    <TextView
            android:text="Fuel type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetailFuel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailCarNameModel"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

    <TextView
            android:text="License plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetailLicensePlate"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailCarNameModel"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:text="Model year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetailModelYear"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailCarNameModel"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

    <TextView
            android:text="Nr of seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetailNrOfSeats"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailLicensePlate"
            android:layout_marginTop="16dp" />

    <TextView
            android:text="Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetailBody"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailLicensePlate"
            android:layout_marginTop="16dp" />

    <TextView
            android:text="Options"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetailOption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailBody"
            android:layout_marginTop="16dp" />

    <TextView
            android:text="Price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetailPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailOption"
            android:layout_marginTop="24dp"
            android:textSize="20sp" />

    <TextView
            android:text="yyyy-mm-dd - yyyy-mm-dd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetailReservationDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailPrice"
            android:layout_marginTop="24dp" />

    <android.widget.Button
            android:text="Pick date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnPickDate"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/color_primary_button"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailReservationDate"
            android:layout_marginTop="8dp" />

    <android.widget.Button
            android:text="Reserveer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnReserverCar"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/color_green_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPickDate"
            android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.501" />
</androidx.constraintlayout.widget.ConstraintLayout>