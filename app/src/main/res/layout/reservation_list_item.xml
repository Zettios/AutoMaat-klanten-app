<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/clReservationItem"
            android:padding="8dp"
            android:background="@drawable/custom_car_list_background">

        <TextView
                android:text="Reservering code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtReservationCodeTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="20sp"
                android:textStyle="bold" />

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtReservationCode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/txtReservationCodeTitle" />

        <TextView
                android:text="Reserving datum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtReservationDateTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtReservationCode"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtReservationDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtReservationDateTitle"
                android:layout_marginTop="2dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>